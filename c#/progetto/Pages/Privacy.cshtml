@page  
@model PrivacyModel  
@{  
   ViewData["Title"] = "Privacy Policy";  
}  
 
<div style="text-align: center">  
   <h1 class="text-primary">@ViewData["Title"]</h1>  
</div>  
 
<div class="text-center" style="text-align: center; border: 1px solid #00f; padding: 20px; border-radius: 15px; max-width: 700px; margin: 20px auto; font-family:'Arial', sans-serif; background-color: #f9f9f9;">  
   <p class="font-italic" style="font-size: 1.2em; font-weight: bold;">  
       <strong>
        </strong>
        Your privacy is important to us. This page describes the privacy policies of our site.
        <style>  
              body {  
                  background-color: #eef2f7;  
                  font-family: 'Arial', sans-serif;  
              } 
              h1, h2 {  
                  color: #333;  
              }
              p {  
                  color: #555;  
              }  
              a {  
                  color: #007bff;  
                  text-decoration: none;  
              }  
              a:hover {  
                  text-decoration: underline;  
              }  
  
            </style>
   </p>
 
